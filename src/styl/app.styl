// Variables
blue500 = #03a9f4
blue700 = #0288d1
blue900 = #01579b
blue100 = #b3e5fc

html
  box-sizing border-box
  -webkit-font-smoothing subpixel-antialiased

*, *:before, *:after
  box-sizing inherit

body
  font-family 'Roboto', sans-serif
  padding 0
  margin 0
  background #f5f5f5
  color rgba(0,0,0,0.72)

h1, h2, h3, h4
  padding 0
  margin 0
  font-weight normal

.header
  color #fff
  position fixed
  width 100%
  z-index 9999
  display block

  h1
    padding 0
    padding-left 25px
    margin 0
    line-height normal
    font-size 20px
    font-weight 400
    display block
    float left

  .menu
    height 56px
    padding 20px
    padding-top 16px
    width 100%
    float left
    position relative
    background blue500
    -webkit-box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
    box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)

    .subtitle, .find
      display none

    &.expanded
      height 128px
      margin-bottom 40px

      h1
        display none
      .subtitle, .find
        display block


  .burger
    float left
    width 24px
    height 24px
    text-align center
    line-height 24px
    font-size 20px
    color blue700

  .subtitle
    font-size 24px
    font-weight 300
    position absolute
    bottom 20px
    left 72px
    padding 0
    margin 0

.sidebar
  position fixed
  left 0
  top 0
  width 70%
  height 100%
  background #ccc
  display none

  &.active
    display block

.find
  -webkit-box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  width 40px
  height 40px
  cursor pointer
  display block
  float left
  position absolute
  bottom -20px
  left 20px
  border-radius 40px
  line-height 40px
  text-align center
  background-color #ff5722

ul
  margin 0
  padding 5px

.arrow
  &:before
    position absolute
    right 20px
    font-size 18px
    color #999
    cursor pointer
    display inline-block
    font-family 'FontAwesome'
    content '\f107'


.item
  display block
  position relative
  width 100%
  height auto
  float left
  background #fff
  -webkit-box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  margin-bottom 8px
  border-radius 2px
  p
    margin-top 0
    font-weight 300
    font-size 14px

.item-content
  padding 20px

  .item-section-title, p, .item-section-title
    display none

  &.active
    .item-section-title, p, .item-section-title
      display block
    .arrow:before
        content '\f106'

.item-title
  font-size 20px
  font-weight 400

.item-subtitle
  text-transform uppercase
  font-size 12px
  margin-top 3px
  display block
  color rgba(0,0,0,0.40)

.item-inputs
  display block
  float left
  width 100%
  background #f9f9f9

.fa.fa-bolt
  width 4%
  color rgba(0,0,0,0.10)
  height 40px
  line-height 40px
  display block
  float left

.item-input
  width 48%
  display block
  float left
  line-height 40px
  text-align center
  height 40px
  font-size 12px
  text-transform uppercase
  color rgba(0,0,0,0.54)
  font-weight 400

.item-section-title
  font-size 14px
  font-weight 500
  line-height 22px
  padding-top 20px
  color blue700

  &.highlight
    font-weight 300

  .fa
    padding-right 5px

.search
  width 100%
  padding 10px 5px
  display block
  float left
  position relative

  .fa.fa-search
    position absolute
    top 26px
    left 20px
    color rgba(0,0,0,0.54)
    font-size 18px

input[type='search']
  padding-left 55px
  padding-right 10px
  border-radius 2px
  width 100%
  height 48px
  font-size 20px
  -webkit-box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.24)
  border 1px #f3f3f3 solid
  color rgba(0,0,0,0.72)

.instructions
  display block
  margin-top 65px
  float left
  padding-left 10px
  font-size 14px
  color rgba(0,0,0,.54)
